<Window x:Class="Lab07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab07"
        mc:Ignorable="d"
        Title="Авторизация" Height="504.5" Width="350" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" FontSize="18" FontFamily="Century Gothic" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-20">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <local:Auth Grid.Column="0"/>

        <StackPanel Grid.Row="1" Margin="5,8">
            <local:UserAcc userImage="Images/Anna.jpg" userName="Анна Петрова" userTitle="Дизайнер"/>
            <local:UserAcc userImage="Images/Peter.jpg" userName="Петр Крюков" userTitle="Программист"/>
        </StackPanel>
        
    </Grid>
</Window>
